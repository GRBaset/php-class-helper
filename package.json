{
    "name": "php-class-helper",
    "displayName": "PHP Class Helper",
    "description": "Be more productive in writing PHP, JavaScript and TypeScript code with a simple keybinding.",
    "version": "0.0.10",
    "publisher": "predrag-nikolic",
    "homepage": "https://github.com/predragnikolic/php-class-helper",
    "repository": {
        "type": "git",
        "url": "https://github.com/predragnikolic/php-class-helper"
    },
    "icon": "resources/icon.png",
    "keywords": [
        "javascript",
        "php",
        "typescript",
        "constructor",
        "class",
        "companion",
        "getters",
        "setters"
    ],
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "command": "php-class-helper.run",
                "key": "alt+c",
                "when": "editorTextFocus && editorLangId == php"
            },
            {
                "command": "php-class-helper.run",
                "key": "alt+c",
                "when": "editorTextFocus && editorLangId == javascript"
            },
            {
                "command": "php-class-helper.run",
                "key": "alt+c",
                "when": "editorTextFocus && editorLangId == typescript"
            },
            {
                "command": "php-class-helper.addMehtod",
                "key": "alt+m",
                "when": "editorTextFocus && editorLangId == php"
            },
            {
                "command": "php-class-helper.addMehtod",
                "key": "alt+m",
                "when": "editorTextFocus && editorLangId == javascript"
            },
            {
                "command": "php-class-helper.addMehtod",
                "key": "alt+m",
                "when": "editorTextFocus && editorLangId == typescript"
            },
            {
                "command": "php-class-helper.addPrivateMehtod",
                "key": "ctrl+alt+m",
                "when": "editorTextFocus && editorLangId == php"
            },
            {
                "command": "php-class-helper.addPrivateMehtod",
                "key": "ctrl+alt+m",
                "when": "editorTextFocus && editorLangId == typescript"
            }
        ],
        "configuration": [
            {
                "title": "PHP Class helper Configuration options",
                "properties": {
                    "php-class-helper.visibility": {
                        "type": "string",
                        "default": "private",
                        "description": "Default visibility of a property"
                    },
                    "php-class-helper.typescript.method.prefixWithVisibility": {
                        "type": "boolean",
                        "default": true,
                        "description": "Prefix method with public or private keywords"
                    },
                    "php-class-helper.typescript.method.prefixWithType": {
                        "type": "boolean",
                        "default": true,
                        "description": "Prefix method with the type declaration"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}